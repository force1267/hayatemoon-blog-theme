<div class="post-card">
    <div>
        {{#if feature_image}}
            <img src="{{img_url feature_image}}" alt="{{title}}" />
        {{else}}
            <img class="no-photo" src="{{asset "icons/post-no-photo.jpg"}}" alt="{{title}}" />
        {{/if}}
    </div>
    <span>{{date published_at format="DD MMMM . YYYY"}}</span>
    <header>
        <h1>{{title}}</h1>
    </header>
    {{#if custom_excerpt}}
    <section>
        <h2>{{custom_excerpt}}</h2>
    </section>
    {{/if}}
    <a href="{{url}}">خواندن مطلب</a>
</div>